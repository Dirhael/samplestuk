<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<h2>To Do</h2>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @to_do.each do |todo| %>
      <tr>
        <td><%= todo.content %></td>
        <td><%= todo.state %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_task_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Mark as Doing', change_task_path(todo, state: 'doing'), method: :put  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

